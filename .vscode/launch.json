{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Customer API",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/apps/backend/customer-api",
      "runtimeArgs": ["-r", "ts-node/register", "-r", "tsconfig-paths/register"],
      "args": ["src/main.ts"],
      "autoAttachChildProcesses": true,
      "sourceMaps": true,
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    }
  ]
}
